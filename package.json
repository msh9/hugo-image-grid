{
  "name": "hugo-image-grid",
  "private": true,
  "version": "0.0.0",
  "description": "Formatting setup for Hugo theme templates and CSS via Prettier",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"assets/**/*.css\" \"layouts/**/*.html\"",
    "format:check": "prettier --check \"assets/**/*.css\" \"layouts/**/*.html\"",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:css:fix": "stylelint \"assets/css/**/*.css\" --fix"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0"
  }
}
